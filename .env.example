# ===========================================
# Coffee Counter Microservices - Environment Template
# ===========================================
# Copy this file to .env and update the values

# Database 구성
POSTGRES_DB=coffee_counter
POSTGRES_USER=coffee_user
POSTGRES_PASSWORD=CHANGE_THIS_PASSWORD
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Redis 구성
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration - CHANGE THESE IN PRODUCTION!
JWT_SECRET=CHANGE_THIS_SECRET_KEY
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Services 구성
AUTH_SERVICE_PORT=3001
API_SERVICE_PORT=8080
FRONTEND_PORT=3000

# 환경
NODE_ENV=development
RUST_LOG=info

# Docker Hub 구성 (배포용)
DOCKER_HUB_USERNAME=your-dockerhub-username
DOCKER_HUB_TOKEN=your-docker-hub-token
DOCKER_HUB_REGISTRY=docker.io
PROJECT_NAME=coffee-counter

# Application 구성
APP_NAME=Coffee Counter
APP_VERSION=1.0.0
APP_DESCRIPTION=Coffee Counter Microservices Application
